###############################################
# Core
###############################################
ENVIRONMENT=production
DEBUG=False

# Strong random string (>= 32 chars). Generate one:
#   python manage.py secret
SECRET_KEY=changeme-32+chars

###############################################
# Database (app runs on host; DB in Docker)
###############################################
# SQLAlchemy URL (Postgres)
DATABASE_URL=postgresql+psycopg2://sentinel_user:sentinel_pass@localhost:5432/sentinel_db

# Optional: SQLAlchemy engine pooling (tune in prod)
POOL_SIZE=10
MAX_OVERFLOW=20

###############################################
# Bootstrap / initial admin
###############################################
# Used by: python manage.py create_admin / bootstrap
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin

###############################################
# Runtime (read by scripts/sc.sh and manage.py)
###############################################
# Bind address for API + Webhook
APP_HOST=0.0.0.0

# API service
APP_PORT_API=8080
APP_WORKERS_API=8
# Uvicorn ASGI app path for API
APP_MODULE_API=app.main:app

# Webhook service (separate Gunicorn)
APP_PORT_WEBHOOK=8081
APP_WORKERS_WEBHOOK=2
# Uvicorn ASGI app path for Webhook
APP_MODULE_WEBHOOK=app.webhook_app:app

# Logging
APP_LOG_LEVEL=info
# Override if you want non-default locations
# LOG_DIR_API=./logs/sentinel
# LOG_DIR_WEBHOOK=./logs/webhook
# RUN_DIR=./run

###############################################
# Optional integrations
###############################################
# REDIS_URL=redis://localhost:6379/0