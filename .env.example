# ====================================
# Sentinel Commander - Local .env
# ====================================

# DATABASE SETTINGS
DATABASE_URL=postgresql+psycopg2://sentinel_user:sentinel_pass@localhost:5432/sentinel_db

# REDIS SETTINGS (optional for triage queue later)
REDIS_URL=redis://localhost:6379/0

# ALEMBIC SETTINGS (optional, can be read from env)
ALEMBIC_DATABASE_URL=${DATABASE_URL}

# OTHER SETTINGS
# Example: secret key for session tokens, JWT, etc.
SECRET_KEY=supersecretkey

# FastAPI settings
ENV=development
DEBUG=True